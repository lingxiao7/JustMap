<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:orientation="vertical"
   android:background="@drawable/dialog_delete_friend"
   android:gravity="center">

   <LinearLayout
   android:gravity="center"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:orientation="horizontal"
   android:paddingTop="150px">

		<TextView android:id="@+id/txt_friend_number_label"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="20sp"
		  android:text="NUMBER: "/>

		<!--The text is hard-coded here but will be set programatically in code in final assembly-->
		<TextView android:id="@+id/txt_friend_number"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="20sp"
		  android:text="1234567890"/>

   </LinearLayout>

   <LinearLayout
	   android:gravity="center"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:orientation="horizontal">

	<Button
		android:id="@+id/btn_dialog_ok"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:background="@drawable/dialog_ok_def"
		android:layout_marginRight="10dp"/>

	<Button
		android:id="@+id/btn_dialog_close"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:background="@drawable/dialog_close_def"
		android:layout_marginLeft="10dp"/>

	</LinearLayout>
</LinearLayout>